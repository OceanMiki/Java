import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int d = s.nextInt();
		int a[] = new int[n];
		long ans = 0;
		for (int i = 2; i <= n; i++) {
			if (a[i] <= a[i - 1]) {
				int tmp = (a[i - 1] - a[i] + d) / d;
				a[i] += tmp * d;
				ans += tmp;
			}
		}
		System.out.println(ans);
		s.close();
	}
}
